<Page x:Class="PosterFims.PagePoster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PosterFims"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePoster">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="377"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="DGPoster" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название фильма"  Binding="{Binding NameFilm}" Width="*"/>
                <DataGridTextColumn Header="Длительность"  Binding="{Binding Duration}" Width="*"/>
                <DataGridTextColumn Header="Описание"  Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Начало"  Binding="{Binding Start}" Width="*"/>
                <DataGridTextColumn Header="Конец"  Binding="{Binding Culminate}" Width="*"/>
               
            </DataGrid.Columns>
        </DataGrid>




    </Grid>
</Page>
